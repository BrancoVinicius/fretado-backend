generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  nome  String
  email String @unique
  senha String
}

model Student {
  id         Int    @id @default(autoincrement())
  nome       String
  email      String @unique
  senha      String
  cpf        String
  telefone   String
  faculdade  String
  cep        String
  bairro     String
  rua        String
  numero     String
  itinerario String
  fotoB64    String
}

model Driver {
  id          Int    @id @default(autoincrement())
  nome        String
  email       String @unique
  senha       String
  habilitacao String
  fotoB64     String
}

model Van {
  id     Int    @id @default(autoincrement())
  modelo String
  placa  String @unique
  ano    String
  cor    String
}

model Admin {
  id      Int    @id @default(autoincrement())
  nome    String
  email   String @unique
  senha   String
  fotoB64 String
}

model Itinerario {
  id     Int    @id @default(autoincrement())
  nome   String @unique
  inicio String
  final  String
}
