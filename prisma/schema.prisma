generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  nome  String
  email String @unique
  senha String
}

model Student {
  id         Int     @id @default(autoincrement())
  nome       String
  email      String  @unique
  senha      String
  cpf        String
  telefone   String
  faculdade  String
  cep        String
  bairro     String
  rua        String
  numero     String
  itinerario Int?
  fotoB64    String?
  ordem      Int?
  presenca   Boolean @default(true)
}

model Driver {
  id          Int     @id @default(autoincrement())
  nome        String
  email       String  @unique
  telefone    String
  senha       String
  habilitacao String
  itinerario  Int?
  fotoB64     String?
}

model Van {
  id         Int    @id @default(autoincrement())
  modelo     String
  placa      String @unique
  capacidade String
  itinerario Int?
  ano        String
  cor        String
}

model Admin {
  id      Int     @id @default(autoincrement())
  nome    String
  email   String  @unique
  senha   String
  fotoB64 String?
}

model Itinerario {
  id        Int    @id @default(autoincrement())
  nome      String @unique
  inicio    String
  motorista Int?
  van       Int?
  final     String
}
